[Unit]
Description=Portaliano Web Portal
After=network.target

[Service]
Type=simple
User=dan
WorkingDirectory=/home/dan/Project/Portaliano
Environment=PATH=/home/dan/.local/bin:/usr/local/bin:/usr/bin:/bin
Environment=PLAYWRIGHT_HEADLESS=true
Environment=FLASK_ENV=production
ExecStart=/usr/bin/python3 app.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
